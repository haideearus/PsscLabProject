@model IEnumerable<WebUI.Models.ProductViewModel>
@{
    ViewData["Title"] = "Produse";
}

<h2>Produse</h2>

<table class="table">
    <thead>
    <tr>
        <th>Id</th>
        <th>Nume</th>
        <th>Preț</th>
        <th>Acțiuni</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var product in Model)
    {
        <tr>
            <td>@product.Id</td>
            <td>@product.Name</td>
            <td>@product.Price</td>
            <td>
                <form asp-action="Cart" method="post">
                    <input type="hidden" name="productId" value="@product.Id" />
                        <input type="hidden" name="productPrice" value="@product.Price" />
                        <input type="hidden" name="productName" value="@product.Name" />
                    <button type="submit" class="btn btn-primary">Add 1 quantity</button>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>